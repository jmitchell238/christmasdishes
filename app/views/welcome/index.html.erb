<!-- app/views/welcome/index.html.erb -->
<div class="flex items-center justify-center w-full min-h-screen">
  <div class="container mx-auto text-center text-black bg-white bg-opacity-50 rounded-lg">

    <div class="flex bg-white bg-opacity-50 w-full">
      <%= render 'welcome/welcome_breadcrumb', class: 'text-black' %>
    </div>

    <h1 class="text-4xl font-bold mb-8 pt-4">Welcome to the Mitchell Friends Christmas Party!</h1>

    <p class="pb-8 pt-2">Sign up to bring a dish <%= link_to 'HERE', new_dish_path, class: 'text-blue-500 font-semibold' %>.</p>

    <% if @dishes.present? %>
      <div class="items-center">
        <%= render 'dishes/dishes_table', dishes: @dishes %>
      </div>
    <% else %>
      <p class="mb-8">Currently, no dishes have been added.</p>
    <% end %>

    <p class="pt-4">Sign up to bring a dish <%= link_to 'HERE', new_dish_path, class: 'text-blue-500 font-semibold' %>.</p>
  </div>
</div>
