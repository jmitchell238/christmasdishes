<!-- app/dishes/new.html.erb -->

<div class="container mx-auto p-4">

    <h1 class="text-4xl font-bold mb-4">Sign Up to Bring a Dish</h1>
    <p class="mb-8">Enter your details below:</p>

    <%= form_with model: Dish.new, url: dishes_path, method: 'post', class: "mb-8" do |form| %>
    <%= form.label :name, 'Your Name' %>
    <%= form.text_field :name %>

    <%= form.label :dish, 'Dish You\'re Bringing' %>
    <%= form.text_field :dish %>

    <%= form.label :comments, 'Additional Comments' %>
    <%= form.text_area :comments %>

    <%= form.submit 'Submit' %>
    <% end %>

</div>
